<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTimer">

    <TextView
        android:id="@+id/foodTime2"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="00 "
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/otherTime"
        app:layout_constraintTop_toBottomOf="@+id/otherBar" />

    <TextView
        android:id="@+id/foodTime"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="00 "
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/foodMin"
        app:layout_constraintTop_toBottomOf="@+id/foodBar" />

    <Button
        android:id="@+id/button7"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#c10726"
        android:text="END"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="#d3940c"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="390dp"
        android:layout_height="71dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/caveat_bold"
        android:gravity="center"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stretchText"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/stretch_break"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterTime" />

    <ProgressBar
        android:id="@+id/stretchBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="146dp"
        android:layout_height="134dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:progress="100"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stretchText" />

    <TextView
        android:id="@+id/stretchTime"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="00 "
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stretchBar" />

    <TextView
        android:id="@+id/stretchMin"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/minutes"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toEndOf="@+id/stretchTime"
        app:layout_constraintTop_toBottomOf="@+id/stretchBar" />

    <TextView
        android:id="@+id/otherText"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/other_break"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodMin" />

    <ProgressBar
        android:id="@+id/otherBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="146dp"
        android:layout_height="134dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:progress="100"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherText" />

    <TextView
        android:id="@+id/otherTime"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/minutes"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherBar" />

    <TextView
        android:id="@+id/foodText"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/food_break"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <ProgressBar
        android:id="@+id/foodBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="146dp"
        android:layout_height="134dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:progress="100"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodText" />

    <TextView
        android:id="@+id/foodMin"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/minutes"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodBar" />

    <TextView
        android:id="@+id/waterText"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/water_break"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <ProgressBar
        android:id="@+id/waterBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="146dp"
        android:layout_height="134dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:progress="100"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterText" />

    <TextView
        android:id="@+id/waterTime"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="00 "
        android:textAlignment="textEnd"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterBar" />

    <TextView
        android:id="@+id/waterMin"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_thin"
        android:text="@string/minutes"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toEndOf="@+id/waterTime"
        app:layout_constraintTop_toBottomOf="@+id/waterBar" />

    <Button
        android:id="@+id/button4"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="#07af57"
        android:text="Add Break"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="68dp"
        android:layout_height="221dp"
        app:srcCompat="@drawable/watericon"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="71dp"
        app:layout_constraintBottom_toBottomOf="@id/waterBar"
        app:layout_constraintLeft_toLeftOf="@id/waterBar"
        app:layout_constraintRight_toRightOf="@id/waterBar"
        app:layout_constraintTop_toTopOf="@id/waterBar"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="75dp"
        android:layout_height="321dp"
        app:srcCompat="@drawable/foodicon2"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="23dp"
        app:layout_constraintBottom_toBottomOf="@id/foodBar"
        app:layout_constraintLeft_toLeftOf="@id/foodBar"
        app:layout_constraintRight_toRightOf="@id/foodBar"
        app:layout_constraintTop_toTopOf="@id/foodBar"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="94dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/stretchicon"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="342dp"
        app:layout_constraintBottom_toBottomOf="@id/stretchBar"
        app:layout_constraintLeft_toLeftOf="@id/stretchBar"
        app:layout_constraintRight_toRightOf="@id/stretchBar"
        app:layout_constraintTop_toTopOf="@id/stretchBar"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="97dp"
        android:layout_height="325dp"
        app:srcCompat="@drawable/pauseicon"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="241dp"
        app:layout_constraintBottom_toBottomOf="@id/otherBar"
        app:layout_constraintLeft_toLeftOf="@id/otherBar"
        app:layout_constraintRight_toRightOf="@id/otherBar"
        app:layout_constraintTop_toTopOf="@id/otherBar"/>

</android.support.constraint.ConstraintLayout>